<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="edit_spinner_style">
        <item name="android:textSize">40sp</item>
    </style>
    
    <style name="msg_dialog_spinner_style">
        <item name="android:textSize">30sp</item>
    </style>
    
    <style name="Dialog_Fullscreen"> 
		<item name="android:windowFullscreen">true</item> 
		<item name="android:windowNoTitle">true</item> 
	</style>
 <style name="textSmallBlack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>
   <style name="listFund">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_marginBottom">0dip</item>
      
        <item name="android:fadingEdge">none</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:background">@null</item>
        <item name="android:divider">@drawable/line_gray</item>
        <item name="android:dividerHeight">1dip</item>
        <item name="android:listSelector">@drawable/transparent</item>
    </style>
    <style name="table">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:background">@drawable/shape_white</item>
        <item name="android:stretchColumns">1</item>
    </style>
    <style name="textNormal">
      
        <item name="android:textSize">15sp</item>
         <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/gray_text</item>
       
        <item name="android:layout_centerVertical">true</item>
      
       
        <item name="android:layout_marginLeft">5dip</item>
    </style>
    <style name="editNormal">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@drawable/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">5dip</item>
    </style>
    <style name="tableRow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
    </style>
    <style name="viewLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:background">@drawable/gray_frame</item>
    </style>
    <style name="loading_dialog" parent="android:style/Theme.Dialog">  
        <item name="android:windowFrame">@null</item>  
        <item name="android:windowNoTitle">true</item>   
        <item name="android:windowBackground">@drawable/shape_white</item>  
        <item name="android:windowIsFloating">true</item>  
        <item name="android:windowContentOverlay">@null</item>  
    </style>  
</resources>
