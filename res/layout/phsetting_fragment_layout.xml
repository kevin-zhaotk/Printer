            android:singleLine="true"
            android:textSize="@dimen/settingsTextsize"
            android:text="@string/str_textview_param4"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/ph_set_PHODelayLow_value"
            android:layout_width="@dimen/settingsValueLength"
            android:layout_height="wrap_content"
            android:textSize="@dimen/settingsEditTextsize"
            android:layout_toRightOf="@id/ph_set_PHODelayLow"
            android:inputType="number"
            android:imeOptions="flagNoExtractUi|actionDone"
            android:layout_marginLeft="@dimen/settingsMarginLeft"
            />
          
        <TextView
            android:layout_width="@dimen/settingsUnitLength"
            android:layout_height="@dimen/settingsTextViewHeight"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/ph_set_PHODelayLow_value"
            android:layout_marginLeft="@dimen/settingsMarginLeft"
            android:textSize="@dimen/settingsUnitTextsize" 
            android:text="@string/str_time_unit"
            android:textColor="@color/UnitText"
            />
	</RelativeLayout>
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="@dimen/settingsMarginLeft"
	    android:layout_marginTop="@dimen/settingsMarginTop"
	    android:gravity="center_vertical"
	    >
        <TextView
            android:id="@+id/ph_set_PHOOutput_period"
            android:layout_width="@dimen/settingsItemLength"
            android:layout_height="@dimen/settingsTextViewHeight"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:singleLine="true"
            android:textSize="@dimen/settingsTextsize"
            android:text="@string/str_textview_param5"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/ph_set_PHOOutput_period_value"
            android:layout_width="@dimen/settingsValueLength"
            android:layout_height="wrap_content"
            android:textSize="@dimen/settingsEditTextsize"
            android:layout_toRightOf="@id/ph_set_PHOOutput_period"
            android:inputType="number"
            android:imeOptions="flagNoExtractUi|actionDone"
            android:layout_marginLeft="@dimen/settingsMarginLeft"
            />
          
        <TextView
            android:layout_width="@dimen/settingsUnitLength"
            android:layout_height="@dimen/settingsTextViewHeight"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/ph_set_PHOOutput_period_value"
            android:layout_marginLeft="@dimen/settingsMarginLeft"
            android:textSize="@dimen/settingsUnitTextsize" 
            android:text="@string/str_time_unit"
            android:textColor="@color/UnitText"
            />
	</RelativeLayout>
	
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="@dimen/settingsMarginLeft"
	    android:layout_marginTop="@dimen/settingsMarginTop"
	    android:gravity="center_vertical"
	    >
        <TextView
            android:id="@+id/ph_set_TimeFixed_period"
