     <HorizontalScrollView 
         android:id="@+id/scrollview_prev_id"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         	android:layout_below="@id/btnopenfile"
         >
     	<ListView
        	android:id="@+id/lv_messages"
        	android:layout_width="fill_parent"
        	android:layout_height="250dp"
         	android:listSelector="@drawable/listitem_select"
         	android:background="#ffffff"
         >
         
     </ListView>
     </HorizontalScrollView>
     
     <TextView
         android:id="@+id/tv_printState"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@id/scrollview_prev_id"
         android:layout_marginTop="10dp"
         android:text="@string/strPrintstate"
		 android:textColor="#000000"
		 android:textSize="25dp"
         />
     <TextView
         android:id="@+id/tvprintState"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@id/tv_printState"
         android:layout_below="@id/scrollview_prev_id"
         android:layout_toRightOf="@id/tv_printState"
         android:layout_marginTop="10dp"
         android:text="@string/strPrintok"
         android:background="#00ff00"
		 android:textColor="#000000"
		 android:textSize="25dp"
         />
     
     <TextView
         android:id="@+id/tv_photocell_state"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/scrollview_prev_id" 
         android:layout_marginTop="10dp"
         android:layout_marginLeft="250dp"
         android:text="@string/strPhotocellState"
		 android:textColor="#000000"
		 android:textSize="25dp"
         />
     <TextView
         android:id="@+id/sw_photocell_state"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@id/tv_photocell_state"
         android:layout_toRightOf="@id/tv_photocell_state"
         android:layout_marginLeft="10dp"
         android:text="@string/strDefault"
         android:textColor="#000000"
         android:textSize="25dp"
         />
     
     <TextView
         android:id="@+id/tv_encoder_state"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="420dp"
         android:layout_below="@id/scrollview_prev_id"
         android:layout_alignBaseline="@id/tv_photocell_state" 
         android:text="@string/strEncoderState"
		 android:textColor="#000000"
		 android:textSize="25dp"
         />
     <TextView
         android:id="@+id/sw_encoder_state"
         android:layout_width="wrap_content"
         android:layout_height="50dp"
         android:layout_alignBaseline="@id/tv_encoder_state"
         android:layout_toRightOf="@id/tv_encoder_state"
         android:layout_marginLeft="10dp"
         android:text="@string/strDefault"
         android:textColor="#000000"
         android:textSize="25dp"
         />
     
     
     <TextView
		  android:id="@+id/tv_inkValue"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:layout_below="@id/scrollview_prev_id"
		  android:layout_alignParentRight="true"
		  android:layout_marginTop="10dp"
		  android:text="@string/strDefault"
		  android:textColor="#000000"
		  android:textSize="25dp"
	 />
     <TextView
		  android:id="@+id/tv_tv_inkLevel"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:layout_alignBaseline="@id/tv_inkValue"
		  android:layout_toLeftOf="@id/tv_inkValue"
		  android:text="@string/strInklevel"
		  android:textColor="#000000"
		  android:textSize="25dp"
	 />
     
     
