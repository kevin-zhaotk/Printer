     <Button
         android:id="@+id/btn_gotoline"
         android:layout_width="80dp"
         android:layout_height="60dp"
         android:layout_below="@id/StartPrint"
         android:layout_alignParentRight="true"
         android:layout_marginRight="10dp"
         android:text="@string/str_goto"
         android:singleLine="true"
         android:textSize="20sp"
         android:textColor="#000000"
         />
     <EditText
         android:id="@+id/et_gotoline"
         android:layout_width="60dp"
         android:layout_height="60dp"
         android:layout_below="@id/StartPrint"
         android:layout_alignBaseline="@id/btn_gotoline"
         android:layout_toLeftOf="@id/btn_gotoline"
         android:imeOptions="flagNoExtractUi"
		 android:hint="@string/strDefault"
         android:singleLine="true"
         android:textSize="20sp"
         android:textColor="#000000"
         />
     
