<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ControlView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    >
    
	<LinearLayout 
	    android:id="@+id/ctrl_btn_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="150dp"
	    android:layout_marginTop="20dp"
	    android:orientation="horizontal"
	    >
	    <!-- 
	    <ImageButton
	        android:id="@+id/StartPrint"
	        android:layout_width="200dp"
	        android:layout_height="150dp"
	        android:src="@drawable/ctrlframe_btn_bg"
	        android:textSize="@dimen/ctrlButtonsTextsize"
	        android:text="@string/str_btn_print" />
		-->
		<RelativeLayout
		    android:id="@+id/StartPrint" 
		    android:layout_width="0dp"
	        android:layout_height="150dp"
	        android:layout_weight="1"
	        >
			<ImageView 
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:src="@drawable/style_ctrlbtn_big"
			    />
			<TextView
			    android:id="@+id/tv_start"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:gravity="center"
		        android:textSize="@dimen/ctrlButtonsTextsize"
		        android:textColor="@color/ctrl_btn_print_selector"
		        android:text="@string/str_btn_print" 
			    />
		</RelativeLayout>
		<RelativeLayout
		    android:id="@+id/StopPrint" 
		    android:layout_width="0dp"
	        android:layout_height="150dp"
	        android:layout_weight="1"
	        >
			<ImageView 
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:src="@drawable/style_ctrlbtn_big"
			    />
			<TextView
			    android:id="@+id/tv_stop"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:gravity="center"
		        android:textSize="@dimen/ctrlButtonsTextsize"
		        android:textColor="@color/ctrl_btn_print_selector"
		        android:text="@string/str_btn_stop" 
			    />
		</RelativeLayout>
		<RelativeLayout
		    android:id="@+id/btnFlush" 
		    android:layout_width="0dp"
	        android:layout_height="150dp"
	        android:layout_weight="1"
	        >
			<ImageView 
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:src="@drawable/style_ctrlbtn_big"
			    />
			<TextView
			    android:id="@+id/tv_flush"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:gravity="center"
		        android:textSize="@dimen/ctrlButtonsTextsize"
		        android:textColor="#000000"
		        android:text="@string/str_btn_clean" 
			    />
		</RelativeLayout>
		
		<RelativeLayout
		    android:id="@+id/btnBinfile" 
		    android:layout_width="0dp"
	        android:layout_height="150dp"
	        android:layout_weight="1"
	        >
			<ImageView 
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:src="@drawable/style_ctrlbtn_big"
			    />
			<TextView
			    android:id="@+id/tv_binfile"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:gravity="center"
		        android:textSize="@dimen/ctrlButtonsTextsize"
		        android:textColor="#000000"
		        android:text="@string/str_openfile" 
			    />
		</RelativeLayout>
	</LinearLayout>
	
	<RelativeLayout 
        android:id="@+id/ctrl_msgname"
        android:layout_width="fill_parent"
        android:layout_height="58dp"
        android:layout_below="@id/ctrl_btn_layout"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
	     
	    <TextView 
	        android:id="@+id/tv_msg_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/str_msg_name"
            android:textSize="@dimen/ctrlButtonsTextsize"
            android:textColor="#000000"
            />
	    <RelativeLayout
		    android:id="@+id/btn_page_backward" 
		    android:layout_width="120dp"
	        android:layout_height="fill_parent"
	        android:layout_alignParentRight="true"
	        >
			<ImageView 
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:src="@drawable/style_ctrlbtn_bg_small"
			    />
			<TextView
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:gravity="center"
		        android:textSize="@dimen/ctrlButtonsTextsize_min"
		        android:textColor="#000000"
		        android:text="@string/str_page_backward" 
			    />
		</RelativeLayout>
	    
	    <RelativeLayout
		    android:id="@+id/btn_page_forward" 
		    android:layout_width="120dp"
	        android:layout_height="fill_parent"
	        android:layout_toLeftOf="@id/btn_page_backward"
	        >
			<ImageView 
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:src="@drawable/style_ctrlbtn_bg_small"
			    />
			<TextView
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:gravity="center"
		        android:textSize="@dimen/ctrlButtonsTextsize_min"
		        android:textColor="#000000"
		        android:text="@string/str_page_forward" 
			    />
		</RelativeLayout>
	    
	    <TextView
	        android:id="@+id/opened_msg_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/tv_msg_name"
	        android:layout_toLeftOf="@id/btn_page_backward"
	        android:textSize="@dimen/ctrlButtonsTextsize"
            android:textColor="#000000"
            />
    </RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/ctrl_msg_preview"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_below="@id/ctrl_msgname"
        android:orientation="vertical">
	    <HorizontalScrollView 
	        android:id="@+id/preview_scroll"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        >
<!--
	        <TextView
            android:id="@+id/message_preview"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:minWidth="800dp"
            android:hint="@string/str_hint_preview"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:textSize="@dimen/ctrlPreviewTextsize"
            android:textColor="#8f8f8f"
            android:singleLine="true"
            />
-->
			<ImageView
				android:id="@+id/message_prev_img"
				android:layout_width="wrap_content"
				android:layout_height="50dp"
				android:minWidth="800dp"
				android:background="#ffffff"
				android:gravity="center_vertical"
				/>
        <!-- 
	    <EditText
            android:id="@+id/message_preview"
            android:layout_width="fill_parent"
            android:layout_height="116dp"
            android:textSize="@dimen/ctrlPreviewTextsize"
            android:textColor="#8f8f8f"
            android:hint="@string/str_hint_preview"
            android:editable="false"
            android:singleLine="true"
            />
        -->
        </HorizontalScrollView>
    </LinearLayout>
  
    <LinearLayout 
        android:id="@+id/ctrl_stateview"
        android:layout_width="fill_parent"
        android:layout_height="58dp"
        android:layout_below="@id/ctrl_msg_preview"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            >
		    <TextView
		        android:id="@+id/tv_inkValue"
		        android:layout_width="wrap_content"
		        android:layout_height="fill_parent"
		        android:text="@string/str_state_inklevel"
		        android:textSize="@dimen/ctrlButtonsTextsize"
		        android:textColor="#000000"
		        />
		    <TextView
		        android:id="@+id/ink_value"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_toRightOf="@id/tv_inkValue"
		        android:text="@string/str_invalid_ink"
		        android:textSize="@dimen/ctrlButtonsTextsize"
		        android:textColor="#000000"
		        />
	    </RelativeLayout>
	    <TextView
	        android:id="@+id/power_state"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
            android:textSize="@dimen/ctrlButtonsTextsize"
            android:textColor="#000000"
	        />
        
	    <RelativeLayout
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        >
        <TextView
            android:id="@+id/tv_printState"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:text="@string/str_state_printing"
            android:textSize="@dimen/ctrlButtonsTextsize"
            android:textColor="#000000"
            android:background="@color/green"
            android:visibility="gone"
            />
        <TextView
        	android:id="@+id/tv_stopState"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_alignParentRight="true"
	        android:text="@string/str_state_stopped"
	        android:textSize="@dimen/ctrlButtonsTextsize"
	        android:textColor="#000000"
	        android:background="@color/red"
	         />
        </RelativeLayout>
    </LinearLayout>
       
</RelativeLayout>
