    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
	<RelativeLayout 
	    android:id="@+id/ctrl_scroll"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content">
    
	
    <Button
        android:id="@+id/StartPrint"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text="@string/btn_print" />
	
    
    <Button
        android:id="@+id/StopPrint"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/StartPrint"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/StartPrint"
        android:textSize="20dp"
        android:text="@string/btn_stop" />
	
    <Button
        android:id="@+id/btnFlush"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/StartPrint"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/StopPrint"
        android:textSize="20dp"
        android:text="@string/btn_clean" />
	
    <Button
        android:id="@+id/btn_preview"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/StartPrint"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/btnFlush"
        android:textSize="20dp"
        android:text="@string/str_preview" />
	
    <Button
        android:id="@+id/btnPreRecord"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/StartPrint"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/btn_preview"
        android:textSize="20dp"
    	android:text="@string/btn_prerecord"
        />
	
    <Button
        android:id="@+id/btnNextRecord"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/StartPrint"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/btnPreRecord"
        android:textSize="20dp"
    	android:text="@string/btn_nextrecord"
        />
