     <Button 
         android:id="@+id/btnopenfile"
         android:layout_below="@id/btnFinish"
         android:layout_width="150dp"
         android:layout_height="wrap_content"
         android:text="@string/str_openfile"
         android:textSize="20sp"
         android:textColor="#404040"
         />
     
     <Button 
         android:id="@+id/btnTlkfile"
         android:layout_below="@id/btnFinish"
         android:layout_toRightOf="@id/btnopenfile"
         android:layout_width="150dp"
         android:layout_height="wrap_content"
         android:text="@string/str_tlkfile"
         android:textSize="20sp"
         android:textColor="#404040"
         />
     
     <Button 
         android:id="@+id/btn_mvbackward"
         android:layout_alignBottom="@id/btnopenfile"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:text="@string/str_mvbackward"
         android:textSize="15sp"
         />
     
     <Button 
         android:id="@+id/btn_mvforward"
         android:layout_alignBottom="@id/btnopenfile"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toLeftOf="@id/btn_mvbackward"
         android:text="@string/str_mvforward"
         android:textSize="15sp"
         />
     <Button
         android:id="@+id/btn_preview"
         android:layout_alignBottom="@id/btnopenfile"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toLeftOf="@id/btn_mvforward"
         android:text="@string/str_preview"
         android:textSize="15sp"
         />
     <HorizontalScrollView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         	android:layout_below="@id/btnopenfile"
         android:layout_marginTop="5dp"
         >
     	<ListView
        	android:id="@+id/lv_messages"
        	android:layout_width="fill_parent"
        	android:layout_height="200dp"
         	android:listSelector="@drawable/listitem_select"
         	android:background="#ffffff"
         >
         
     </ListView>
     </HorizontalScrollView>
</RelativeLayout>
</ScrollView>
