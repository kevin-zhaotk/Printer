<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ControlView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
	<RelativeLayout 
	    android:id="@+id/ctrl_scroll"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content">
    
	
    <Button
        android:id="@+id/StartPrint"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text="@string/btn_start" />

    <Button
        android:id="@+id/StopPrint"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/StartPrint"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/StartPrint"
        android:textSize="20dp"
        android:text="@string/btn_stop" />
	
    <Button
        android:id="@+id/btnClean"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/StartPrint"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/StopPrint"
        android:textSize="20dp"
        android:text="@string/btn_clean" />
	
    <Button
        android:id="@+id/btnOpen"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/StartPrint"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/btnClean"
        android:textSize="20dp"
    	android:text="@string/btn_open"
        />
	
    <Button
        android:id="@+id/btnSend"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/StartPrint"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/btnOpen"
        android:textSize="20dp"
    	android:text="@string/btn_send"
        />
	
    <Button
        android:id="@+id/btnSetparam"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/StartPrint"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/btnSend"
        android:textSize="20dp"
    	android:text="@string/btn_set"
        />
	
    <Button
        android:id="@+id/btnGetinfo"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/StartPrint"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/btnSetparam"
        android:textSize="15dp"
    	android:text="@string/btn_get"
        />
	<Button
	    android:id="@+id/btnPrint"
	    android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_below="@id/StartPrint"
        android:layout_marginTop="2dp"
        android:layout_alignLeft="@id/StartPrint"
        android:textSize="15dp"
    	android:text="@string/btn_print"
	    />
	
	<Button
	    android:id="@+id/btnFinish"
	    android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/btnPrint"
        android:layout_toRightOf="@id/btnPrint"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
    	android:text="@string/btn_finish"
	    />
	
	
    
