<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#436EEE" >

    <RelativeLayout
        android:id="@+id/btn_layout"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/move_up"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/style_up" />

        <ImageButton
            android:id="@+id/move_down"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/move_up"
            android:layout_marginTop="40dp"
            android:background="@drawable/style_down" />

        <RelativeLayout
            android:id="@+id/ok"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/move_down"
            android:layout_marginTop="40dp" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/style_editbtn" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/str_ok"
                android:textColor="#000000"
                android:textSize="@dimen/editButtonsTextsize" />
        </RelativeLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/message_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/btn_layout"
        android:background="#ffffff"
        android:descendantFocusability="blocksDescendants" />

</RelativeLayout>